---
//import { log } from "astro/dist/core/logger/core";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;

// import "../styles/global.css";
---

<!-- <BaseLayout>
  <h1>{frontmatter.title}</h1> -->
<BaseLayout pageTitle={frontmatter.title}>
  <h2>{frontmatter.description}</h2>
  <p>Published on: {frontmatter.pubDate.slice(0, 10)}</p>
  <figure>
    <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
    {
      frontmatter.image.source && (
        <figcaption>{frontmatter.image.source}</figcaption>
      )
    }
  </figure>
  <p>Written by {frontmatter.author}</p>
  <ul>
    {frontmatter.tags.map((tag: String) => <li>{tag}</li>)}
  </ul>
  <slot />
  <div class="tags">
    {
      frontmatter.tags.map((oneTag) => (
        <p class="tag">
          <a href={`/dyntags/${oneTag}`}>{oneTag}</a>
        </p>
      ))
    }
  </div>
</BaseLayout>

<style>
  a {
    /* color: #00539f; */
    color: hotpink;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
